<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="4dp"
    android:id="@+id/root_data">

    <ImageView
        android:id="@+id/img_data"
        android:layout_width="@dimen/category_element_height"
        android:layout_height="@dimen/category_element_height"
        tools:src="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/name_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/img_data"
        tools:text="ANDRIANNA VALENTINOVNA" />
    <TextView
        android:layout_below="@id/name_data"
        android:layout_toRightOf="@+id/img_data"
        android:id="@+id/address_data"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "HUMAN HOME"
        />

    <TextView
        android:id="@+id/number_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_data"
        android:layout_toRightOf="@+id/img_data"
        tools:text = "NUMBER PHOME"/>

    <Button
        android:id="@+id/button_data"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_blue_radius"
        android:textColor="#FFF"
        android:radius="10dp"
        android:layout_below="@id/number_data"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/img_data"
        android:text="Принять/удалить заявку" />

</RelativeLayout>